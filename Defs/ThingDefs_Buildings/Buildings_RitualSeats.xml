  <ThingDef ParentName="RitualSeatBase">
    <defName>TST_WorshipPit</defName>
    <label>worship pit</label>
    <description>A dug out pit deep enough for colonists to climb up out of with reasonable difficulty. Some ideoligions use it to feel closer to the earth, express their shame, or for some other ideoligious reason.</description>
    <graphicData>
      <texPath>Buildings/WorshipPit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <minifiedDef IsNull="True" />
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>2800</WorkToBuild>
      <Beauty>-10</Beauty>
      <Flammability>0.0</Flammability>
      <Comfort>0.20</Comfort>
      <StyleDominance>5</StyleDominance>
    </statBases>
		<altitudeLayer>Floor</altitudeLayer>
    <thingCategories Inherit="False" />
		<blockWind>false</blockWind>
    <castEdgeShadows>false</castEdgeShadows>
    <coversFloor>true</coversFloor>
    <rotatable>false</rotatable>
		<stealable>false</stealable>
    <terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
    <defaultPlacingRot>North</defaultPlacingRot>
    <staticSunShadowHeight>0</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<constructEffect>ConstructDirt</constructEffect>
		<repairEffect>ConstructDirt</repairEffect>
    <building>
      <multiSittable>true</multiSittable>
      <isInert>true</isInert>
      <sitIgnoreOrientation>true</sitIgnoreOrientation>
    </building>
    <comps Inherit="False">
      <li Class="CompProperties_Styleable" />
      <li Class="CompProperties_RitualSeat" />
      <li Class="VFESecurity.CompProperties_TerrainSetter" MayRequire="vanillaexpanded.vfesecurity">
				<terrainDef>VFES_TrenchTerrain</terrainDef>
			</li>
    </comps>
  </ThingDef>

</Defs>