<Defs>

  <ThingDef ParentName="RitualSeatBase">
    <defName>TST_CushionedPew</defName>
    <label>cushioned pew</label>
    <description>A long bench where ritual participants can sit while listening to a speaker. It has cushions and a wooden frame that offer extra comfort.</description>
    <graphicData>
      <texPath>Buildings/CushionedPew/CushionedPew</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,1)</drawSize>
      <shadowData>
        <volume>(0.8, 1, 0.8)</volume>
      </shadowData>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <size>(3,1)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <costList>
      <WoodLog>100</WoodLog>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2400</WorkToBuild>
      <Beauty>10</Beauty>
      <Flammability>1.0</Flammability>
      <Comfort>0.80</Comfort>
      <Mass>15</Mass>
      <StyleDominance>5</StyleDominance>
    </statBases>
    <building>
      <multiSittable>true</multiSittable>
      <paintable>true</paintable>
    </building>
    <comps Inherit="False">
      <li Class="CompProperties_Styleable" />
      <li Class="ExtraRitualSeats.CompProperties_RitualSeatUpgrade">
        <baseThingDef>Pew</baseThingDef>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>

